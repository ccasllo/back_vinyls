{
    "type": "sqlite",
    "database": "data/database.sqlite", // Ruta al archivo de base de datos SQLite
    "synchronize": true, // ADVERTENCIA: Synchronize true solo para desarrollo
    "logging": false,
    "entities": [
        "dist/**/*.entity.js" // Cambiar a .js si estás utilizando TypeScript
    ],
    "migrations": [
        "dist/migration/**/*.js" // Cambiar a .js si estás utilizando TypeScript
    ],
    "subscribers": [
        "dist/subscriber/**/*.js" // Cambiar a .js si estás utilizando TypeScript
    ],
    "cli": {
        "entitiesDir": "src/",
        "migrationsDir": "src/migration",
        "subscribersDir": "src/subscriber"
    }
}
